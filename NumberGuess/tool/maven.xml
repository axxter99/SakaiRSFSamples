<?xml version="1.0" encoding="UTF-8"?>

<!-- default goal for the project builds and installs the war in the local repository -->
<project xmlns:j="jelly:core" xmlns:maven="jelly:maven"
  xmlns:u="jelly:util">

  <preGoal name="java:compile">
    <attainGoal name="dependencies" />
  </preGoal>

  <preGoal name="sakai:build">
    <echo>Expanding webapp dependencies</echo>

    <mkdir dir="${maven.war.webapp.dir}" />
    <j:forEach var="lib" items="${pom.artifacts}">
      <j:set var="dep" value="${lib.dependency}" />
      <j:if test="${dep.getProperty('explode') == 'true'}">
        <j:if test="${dep.type =='war'}">
          <unjar src="${lib.path}" dest="${maven.war.webapp.dir}" />
        </j:if>
      </j:if>
    </j:forEach>
  </preGoal>

  <goal name="dependencies">
    <echo>ECHO HERE!!</echo>

    <maven:reactor basedir="${basedir}/.."
      includes="../PonderUtilCore/project.xml,../J-ServletUtil/project.xml,../SakaiRSF/project.xml"
      goals="full" postProcessing="true" collectOnly="false"
      collectionVar="multiprojects" banner="do deps" />

  </goal>
</project>

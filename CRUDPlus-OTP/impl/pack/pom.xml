<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.sakaiproject</groupId>
    <artifactId>sakai-crudplus-base</artifactId>
    <version>M2</version>
  </parent>
  <name>sakai-crudplus-pack</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>sakai-crudplus-pack</artifactId>
  <packaging>sakai-component</packaging>
  <properties>
    <deploy.target>components</deploy.target>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/webapp</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
  <dependencies>   
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-crudplus-logic-impl</artifactId>
      <version>${sakai.version}</version>
      <type>jar</type>
    </dependency>  
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-crudplus-dao-impl</artifactId>
      <version>${sakai.version}</version>
      <type>jar</type>
    </dependency>
      
  </dependencies>
</project>
